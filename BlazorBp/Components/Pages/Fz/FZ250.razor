    <TableColumn Field="@nameof(FZ250TableRowModel.Km)" SortField="@nameof(VFzFahrradstand.Periode_km)" TModel="FZ250Model" TRTable="FZ250TableRowModel"/>
    <TableColumn Field="@nameof(FZ250TableRowModel.Schnitt)" SortField="@nameof(VFzFahrradstand.Periode_Schnitt)" TModel="FZ250Model" TRTable="FZ250TableRowModel"/>
    <TableColumn Field="@nameof(FZ250TableRowModel.Beschreibung)" SortField="@nameof(VFzFahrradstand.Beschreibung)" TModel="FZ250Model" TRTable="FZ250TableRowModel"/>
