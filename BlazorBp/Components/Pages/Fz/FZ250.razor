            <LabelInputValid AutoPostback="" For="@(() => ModalModel!.Datum)" VerticalColClass="form-group col-md-4"/>
            <LabelInputValid AutoPostback="" For="@(() => ModalModel!.UnterNr)" VerticalColClass="form-group col-md-2"/>
          </div>
